<%= form_tag('/convert', method: :get, id: 'exchange_form') do %>
  <div class="bg-danger p-2 top-border">
      <div class="text-center p-3 text-light">Simular Convers√£o <i class="fas fa-dollar-sign"></i>
      </div>
  </div>
  <div class="bg-light p-5">
    <div class='form-group'>
      <p class='title'>Moeda Local</p>
      <%= select_tag 'source_currency', options_for_select(currency_list, 'BRL'), class: 'form-control', id: 'source_currency' %>
    </div>
    <div class='form-group'>
      <input type='number' name='amount' id='amount' class='form-control' placeholder='$$$' step='any' required>
      <div id="reverse" class="btn btn-outline-warning d-block mt-1">Inverter <i class="fas fa-sync-alt"></i></div>
    </div>
    <div class='form-group'>
      <p class='title'>Moeda Pretendida</p>
      <%= select_tag 'target_currency', options_for_select(currency_list, 'USD'), class: 'form-control', id: 'target_currency'%>
    </div>
    <div class='form-group'>
      <input type='text' id='result' name='result' class='form-control border-success' placeholder='Resultado' readonly>
    </div>
  </div>

<% end %>